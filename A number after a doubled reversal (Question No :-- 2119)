class Solution {
    public boolean isSameAfterReversals(int num) {
        if(num==0) return true;
        int copy = num;
        int rev = 0;
        while(num!=0){
            int rem = num%10;
            rev=rev*10+rem;
            num/=10;
        }
        int ans = 0;
        while(rev!=0){
            int rem = rev%10;
            ans = ans*10+rem;
            rev/=10;
        }
        return ans==copy;
    }
}
