class Solution {
    public int pivotIndex(int[] nums) {
        int left = 0;
        int right = 0;
        for(int temp:nums){
            right+=temp;
        }
        for(int i=0;i<nums.length;i++){
            int curr = right-nums[i];
            
            if(left==curr){
                return i;
            }
            left+=nums[i];
            right = right-nums[i];
        }
        return -1;
    }
}
