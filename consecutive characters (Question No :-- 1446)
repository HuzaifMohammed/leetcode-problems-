class Solution {
    public int maxPower(String s) {
        char[] ch = s.toCharArray();
        int max = 1;
        int curr = 1;
        for(int i=1;i<ch.length;i++){
            if(ch[i]==ch[i-1]){
                curr++;
            }else{
                max = Math.max(curr,max);
                curr = 1;
            }
        }
      return Math.max(curr,max);  
    }
}
