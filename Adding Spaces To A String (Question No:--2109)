class Solution {
    public String addSpaces(String s, int[] spaces) {
        char[] ch = s.toCharArray();
        StringBuilder s1 =new StringBuilder();
        int j=0;
        for(int i=0;i<ch.length;i++){
            if(j<spaces.length && i==spaces[j] ){
                j++;
                s1.append(" ");   
            }
            s1.append(ch[i]);
        }
        return s1.toString();
    }
}
