class Solution {
    public boolean isHappy(int n) {

       int slow = n;
       int fast = getsumofsquares(n);
       while(slow!=0 && fast!=slow){
        slow = getsumofsquares(slow);
        fast = getsumofsquares(getsumofsquares(fast));
       }
       return slow==1;
    }
    int getsumofsquares(int n){
        int sum = 0;
        while(n>0){
            int rem = n%10;
            sum+=rem*rem;
            n/=10;
        }
        return sum;
    }
}
